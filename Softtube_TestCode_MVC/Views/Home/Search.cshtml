@{
    ViewData["Title"] = "Search page";
}
@model IEnumerable<Softtube_TestCode_MVC.Models.ProductViewModel.ProductItem>

<!-- Link to an external JavaScript file -->
<script>
    var totalCount = @Model.Count();
</script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="/js/navigation.js"></script>

<link rel="stylesheet" href="~/css/index.css" type="text/css" />

<div class="text-center">
    <h1 class="display-4">Softtube Code Test</h1>
</div>

<form asp-controller="Home" asp-action="SearchProduct" method="get">
    <div class="row">
        <div class="col-md-8">
            <input type="text" id="searchInput" name="searchQuery" placeholder="Search..." class="form-control" />
        </div>
        <div class="col-md-4">
            <button id="searchButton" class="custom-button" type="submit">Search</button>
        </div>
    </div>
</form>



<div id="productsContainer">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-6 product-item">
                <div class="row">
                    <div class="col-md-6">
                        <img src="@product.Images.W240" alt="@product.Name" class="img-fluid" />
                    </div>
                    <div class="col-md-6">
                        <h3>@product.Name</h3>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="button-container">
    <button id="prevPage" class="custom-button">Previous Page</button>
    <button id="nextPage" class="custom-button">Next Page</button>
</div>
